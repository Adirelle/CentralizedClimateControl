<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef
    Name="CCC_VentBase"
    Abstract="True"
    ParentName="CCC_BuildingBase"
  >
    <designatorDropdown>CCC_Vents</designatorDropdown>
    <designationHotKey>Misc5</designationHotKey>
    <building>
      <canPlaceOverWall>true</canPlaceOverWall>
    </building>
    <placeWorkers>
      <li>CentralizedClimateControl.PlaceWorker_HighlightsRooms</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef
    Name="CCC_WallVentBase"
    Abstract="True"
    ParentName="CCC_VentBase"
  >
    <altitudeLayer>PawnUnused</altitudeLayer>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <fillPercent>0</fillPercent>
    <placeWorkers>
      <li>CentralizedClimateControl.PlaceWorker_NeedsWall</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="CCC_WallVentBase">
    <defName>CCC_SmallWallVent</defName>
    <label>Small wall air vent</label>
    <description>A small wall-mounted air vent.</description>
    <graphicData>
      <texPath>Things/Building/Vents/WallAirVentSmall</texPath>
    </graphicData>
    <statBases>
      <WorkToBuild>175</WorkToBuild>
      <MaxHitPoints>75</MaxHitPoints>
      <Mass>1</Mass>
    </statBases>
    <costList>
      <Steel>35</Steel>
    </costList>
    <comps>
      <li Class="CentralizedClimateControl.CompProperties_Vent">
        <shape>AdjacentNorth</shape>
        <baseAirExhaust>50</baseAirExhaust>
      </li>
    </comps>
  </ThingDef>

 <ThingDef ParentName="CCC_WallVentBase">
    <defName>CCC_WallVent</defName>
    <label>Wall air vent</label>
    <description>A wall-mounted air vent.</description>
    <graphicData>
      <texPath>Things/Building/Vents/WallAirVent</texPath>
    </graphicData>
    <statBases>
      <WorkToBuild>350</WorkToBuild>
      <MaxHitPoints>75</MaxHitPoints>
      <Mass>2</Mass>
    </statBases>
    <costList>
      <Steel>70</Steel>
    </costList>
    <comps>
      <li Class="CentralizedClimateControl.CompProperties_Vent">
        <shape>AdjacentNorth</shape>
        <baseAirExhaust>100</baseAirExhaust>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="CCC_VentBase">
    <defName>CCC_SurroundVent</defName>
    <label>Surround air vent</label>
    <description>A surround exhaust vent.</description>
    <graphicData>
      <texPath>Things/Building/Vents/SurroundAirVent</texPath>
    </graphicData>
    <statBases>
      <WorkToBuild>1050</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>50</Mass>
    </statBases>
    <costList>
      <Steel>210</Steel>
    </costList>
    <comps>
      <li Class="CentralizedClimateControl.CompProperties_Vent">
        <shape>AdjacentCardinal</shape>
        <baseAirExhaust>300</baseAirExhaust>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="CCC_VentBase">
    <defName>CCC_WideSurroundVent</defName>
    <label>Large surround air vent</label>
    <description>A large surround exhaust vent.</description>
    <size>(2,1)</size>
    <graphicData>
      <drawSize>(2,1)</drawSize>
      <texPath>Things/Building/Vents/SurroundAirVentWide</texPath>
    </graphicData>
    <statBases>
      <WorkToBuild>2100</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>100</Mass>
    </statBases>
    <costList>
      <Steel>420</Steel>
    </costList>
    <comps>
      <li Class="CentralizedClimateControl.CompProperties_Vent">
        <shape>AdjacentCardinal</shape>
        <baseAirExhaust>600</baseAirExhaust>
      </li>
    </comps>
  </ThingDef>

</Defs>
