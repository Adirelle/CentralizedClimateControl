<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef
    Name="CCC_AirPipeBase"
    Abstract="True"
    ParentName="CCC_Base"
  >
    <building>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
    </building>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Standable</passability>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>35</WorkToBuild>
      <Beauty>-2</Beauty>
    </statBases>
    <costList>
      <Steel>1</Steel>
    </costList>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom6</li>
      </linkFlags>
      <damageData>
        <rect>(0,0.35,1,0.3)</rect>
      </damageData>
    </graphicData>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <rotatable>false</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <clearBuildingArea>false</clearBuildingArea>
    <designatorDropdown>CCC_Pipes</designatorDropdown>
    <designationHotKey>Misc1</designationHotKey>
    <placeWorkers>
      <li>CentralizedClimateControl.PlaceWorker_Pipe</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef
    Name="CCC_HiddenAirPipeBase"
    Abstract="True"
    ParentName="CCC_AirPipeBase"
  >
    <graphicData>
      <texPath>Things/Building/Blank_AirPipe_Atlas</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToBuild>55</WorkToBuild>
      <Beauty>0</Beauty>
    </statBases>
    <costList>
      <Steel>5</Steel>
    </costList>
  </ThingDef>

  <ThingDef
    Name="CCC_RedAirPipe"
    Class="CentralizedClimateControl.Building_AirPipe"
    ParentName="CCC_AirPipeBase"
  >
    <label>Red air pipe</label>
    <description>Red pipes for carrying air.</description>
    <uiIconPath>UI/RedAirPipe</uiIconPath>
    <graphicData>
      <texPath>Things/Building/Hot_AirPipe_Atlas</texPath>
    </graphicData>
    <building>
      <blueprintGraphicData>
        <texPath>Things/Building/Hot_AirPipe_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <comps>
      <li Class="CentralizedClimateControl.CompProperties_Pipe">
        <flowType>Hot</flowType>
      </li>
    </comps>
  </ThingDef>

