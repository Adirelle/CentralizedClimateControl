<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef
    Name="CCC_AirPipeBase"
    Abstract="True"
    ParentName="CCC_Base"
  >
    <building>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
    </building>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Standable</passability>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <rotatable>false</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <clearBuildingArea>false</clearBuildingArea>
    <designatorDropdown>CCC_Pipes</designatorDropdown>
    <designationHotKey>Misc2</designationHotKey>
    <graphicData>
      <damageData>
        <rect>(0,0.35,1,0.3)</rect>
      </damageData>
    </graphicData>
    <placeWorkers>
      <li>CentralizedClimateControl.PlaceWorker_NotOnPipe</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef
    Name="CCC_VisibleAirPipeBase"
    Abstract="True"
    ParentName="CCC_AirPipeBase"
  >
    <thingClass>CentralizedClimateControl.Building_VisiblePipe</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>35</WorkToBuild>
      <Beauty>-2</Beauty>
    </statBases>
    <costList>
      <Steel>1</Steel>
    </costList>
  </ThingDef>

  <ThingDef
    Name="CCC_HiddenAirPipeBase"
    Abstract="True"
    ParentName="CCC_AirPipeBase"
  >
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/Blank_AirPipe_Atlas</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToBuild>55</WorkToBuild>
      <Beauty>0</Beauty>
    </statBases>
    <costList>
      <Steel>5</Steel>
    </costList>
  </ThingDef>

  <ThingDef ParentName="CCC_VisibleAirPipeBase">
    <defName>CCC_RedAirPipe</defName>
    <label>Red air pipe</label>
    <description>Red pipes for carrying air.</description>
    <uiIconPath>UI/RedAirPipe</uiIconPath>
    <comps>
      <li Class="CentralizedClimateControl.CompProperties_Pipe">
        <flowType>Hot</flowType>
      </li>
    </comps>
    <graphicData>
      <texPath>Things/Building/Hot_AirPipe_Atlas</texPath>
    </graphicData>
    <building>
      <blueprintGraphicData>
        <texPath>Things/Building/Hot_AirPipe_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
  </ThingDef>

  <ThingDef ParentName="CCC_HiddenAirPipeBase">
    <defName>CCC_HiddenRedAirPipe</defName>
    <label>Red covered air pipe</label>
    <description>Red pipes for carrying air under floors.</description>
    <uiIconPath>UI/RedAirPipeHidden</uiIconPath>
    <comps>
      <li Class="CentralizedClimateControl.CompProperties_Pipe">
